<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/naslovAlgoritma"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/opisKoraka"
        android:layout_width="350dp"
        android:layout_height="162dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif"
        android:text="TextView"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/dugmeSljedeciKorak"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/naslovAlgoritma"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/dugmeSljedeciKorak"
        android:layout_width="173dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:text="Sljedeci"
        android:background="@color/pozadina"
        android:textColor="@color/bijela"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/slikaKoraka"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/slikaKoraka"
        android:layout_width="355dp"
        android:layout_height="183dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/dugmePovratakNaDetalje"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bfs" />

    <Button
        android:id="@+id/dugmePovratakNaDetalje"
        android:layout_width="171dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:text="Nazad"
        android:background="@color/pozadina"
        android:textColor="@color/bijela"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/dugmePrethodniKorak"
        android:layout_width="162dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Prethodni"
        android:background="@color/pozadina"
        android:textColor="@color/bijela"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/slikaKoraka"
        app:layout_constraintEnd_toStartOf="@+id/dugmeSljedeciKorak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opisKoraka" />

</android.support.constraint.ConstraintLayout>